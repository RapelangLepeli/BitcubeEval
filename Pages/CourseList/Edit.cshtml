@model Training_Facility.Pages.CourseList.EditModel

<br />
<h2 class="text-info">Edit Course</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <input type="hidden" asp-for="course.ID" />
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="course.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="course.Name" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="course.Duration"></label>
            </div>
            <div class="col-6">
                <input asp-for="course.Duration" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="course.Courses"></label>
            </div>
            <div class="col-6">
                <input asp-for="course.Courses" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="course.degree"></label>
            </div>
            <div class="col-6">
                <input asp-for="course.degree" class="form-control" />
            </div>
        </div>

