@page
@model Training_Facility.Pages.LecturerList.EditModel

<br />
<h2 class="text-info">Edit Lecturer</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <input type="hidden" asp-for="lecturer.ID" />
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="lecturer.ForeNames"></label>
            </div>
            <div class="col-6">
                <input asp-for="lecturer.ForeNames" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="lecturer.Surname"></label>
            </div>
            <div class="col-6">
                <input asp-for="lecturer.Surname" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="lecturer.DateOfBirth"></label>
            </div>
            <div class="col-6">
                <input asp-for="lecturer.DateOfBirth" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="lecturer.EmailAddress"></label>
            </div>
            <div class="col-6">
                <input asp-for="lecturer.EmailAddress" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="lecturer.degrees"></label>
            </div>
            <div class="col-6">
                <input asp-for="lecturer.degrees" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="lecturer.courses"></label>
            </div>
            <div class="col-6">
                <input asp-for="lecturer.courses" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2 offset-4">
                <input type="submit" value="Update" class="btn btn-primary form-control" />
            </div>
            <div class="col-3 ">
                <a asp-page="Index" class="btn btn-success fom-control">Back to Lecturers</a>
            </div>
        </div>

    </form>



</div>

